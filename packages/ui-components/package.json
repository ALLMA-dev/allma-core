  },
  "peerDependencies": {
    "react": "^19.1.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.2",
    "eslint": "^9.8.0",
    "typescript-eslint": "^8.0.0",
    "eslint-plugin-react": "^7.34.1",
