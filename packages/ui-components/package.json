{
  "name": "@allma/ui-components",
  "version": "1.0.1",
  "description": "Shared React UI components based on Mantine for the Allma serverless AI orchestration platform.",
  "license": "Apache-2.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
