{
    "extends": "../../tsconfig.base.json", // Inherit from the monorepo root
    "compilerOptions": {
      "module": "es2020",
      "outDir": "./dist",
      "rootDir": "src",
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"],
    "references": [
      { "path": "../core-types" },
      { "path": "../core-sdk" }
    ]
  }
